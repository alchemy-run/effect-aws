---

{comingSoon ? (
	<div class:list={["sdk-card", "coming-soon"]}>
		<div class="card-header">
			<div class="card-icon" set:html={icons[icon]} />
		</div>
		
		<div class="card-content">
			<h3 class="card-title">
				{name}
				<span class="badge">Coming Soon</span>
			</h3>
			<p class="card-description">{description}</p>
		</div>
	</div>
) : (
	<a 
		href={`https://github.com/${repo}`}
		class="sdk-card sdk-card-link"
		target="_blank"
		rel="noopener"
	>
		<div class="card-header">
			<div class="card-icon" set:html={icons[icon]} />
			<div class="github-icon">
